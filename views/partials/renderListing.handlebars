<div class="card">
   <div class="card-header justify-content-between">
        <div class="listing-title flex-wrap is-dark-light my-auto">
            {{title}}
        </div>
        <div class="user-info flex-wrap my-auto">
            Posted by {{user.username}} on {{format_date created_date}}
        </div>
    </div>
    <div class="card-body justify-content-between">
        <div class="listing-img col-md-4 flex-wrap">
          <img class="img-fluid" src="/uploads/{{img_file_name}}"></img>
        </div>
       <div class="listing-info col-md-8 flex-wrap">
            <div class="listing-detail flex-wrap mb-2">
                ${{price}} &#149; {{category}} &#149; {{condition}}
            </div>
            <div class="listing-content my-auto flex-wrap">
                {{content}}
            </div>
        </div>
    </div>
</div>
